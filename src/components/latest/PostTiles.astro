---
import './PostTiles.css';
const { posts } = Astro.props;
---

<div class="tiles-container">
  {
    posts.map(post => (
      <div class="tile">
        <a href={'/blog/' + post.slug}>
          <div class="tile__preview-container">
            <img class="tile__preview" src={post.data.image.url} transition:name={'img_' + post.slug} />
            <div class="tile__title" transition:name={'title_' + post.slug}>
              {post.data.title}
            </div>
          </div>
        </a>
        <div class="tile__description">{post.data.description}</div>
        <span class="tile__date" transition:name={'publishedAt_' + post.slug}>
          {post.data.publishedAt.toLocaleDateString()}
        </span>
      </div>
    ))
  }
</div>
